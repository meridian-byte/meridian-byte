// npx prisma generate -> generate prisma client

generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // uses connection pooling
  directUrl = env("DIRECT_URL") // uses a direct connection
}

// enums

enum Role {
  USER
  ADMIN
  DEV
}

enum Status {
  ACTIVE
  INACTIVE
  DRAFT
  PUBLISHED
}

enum SyncStatus {
  PENDING
  SYNCED
  SAVED
  ERROR
  DELETED
}

enum TransactionType {
  CREDIT
  DEBIT
  TRANSFER
}

enum AccountType {
  ASSET
  LIABILITY
}

enum CategoryType {
  BLOG
  CREDIT
  DEBIT
}

enum WeightUnitType {
  MILLIGRAMS
  GRAMS
}

enum EatTime {
  BREAKFAST
  LUNCH
  DINNER
}

enum RecurringFrequency {
  DAILY
  WEEKLY
  MONTHLY
  QUARTERLY
  SEMI_ANNUALLY
  ANNUALLY
}

// models

model Profile {
  id         String  @id
  user_name  String?
  first_name String?
  last_name  String?
  bio        String?
  avatar     String?
  phone      String?
  role       Role    @default(USER)

  posts         Post[]
  comments      Comment[]
  categories    Category[]
  accountGroups AccountGroup[]
  accounts      Account[]
  transactions  Transaction[]
  budgets       Budget[]
  food          Food[]
  meals         Meal[]
  servings      Serving[]
  eats          Eat[]
  masses        Mass[]
  notebooks     Notebook[]
  notes         Note[]
  links         Link[]

  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt
  sync_status SyncStatus @default(SYNCED)

  @@map("profiles")
}

model Post {
  id             String  @id @default(uuid())
  image          String
  title          String
  excerpt        String
  content        String
  allow_comments Boolean @default(true)
  view_count     Int     @default(0)

  profile     Profile?  @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  profile_id  String?
  category    Category? @relation(fields: [category_id], references: [id], onDelete: SetNull)
  category_id String?

  comments Comment[]

  status      Status     @default(DRAFT)
  sync_status SyncStatus @default(SYNCED)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@unique([profile_id, title])
  @@map(name: "posts")
}

model Category {
  id    String       @id @default(uuid())
  title String
  type  CategoryType @default(BLOG)

  profile    Profile @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  profile_id String

  posts        Post[]
  transactions Transaction[]
  budgets      Budget[]

  status      Status     @default(ACTIVE)
  sync_status SyncStatus @default(SYNCED)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@unique([title])
  @@map(name: "categories")
}

model Comment {
  id         String  @id @default(uuid())
  name       String?
  content    String
  comment_id String?

  post       Post     @relation(fields: [post_id], references: [id], onDelete: Cascade)
  post_id    String
  profile    Profile? @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  profile_id String?

  status      Status     @default(ACTIVE)
  sync_status SyncStatus @default(SYNCED)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@unique([name, content, post_id, profile_id])
  @@map(name: "comments")
}

model AccountGroup {
  id   String @id @default(cuid())
  name String // e.g., 'Bank Accounts', 'Savings', 'Credit Cards'

  profile    Profile @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  profile_id String

  accounts Account[]

  status      Status     @default(ACTIVE)
  sync_status SyncStatus @default(SYNCED)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@unique([profile_id, name])
  @@map(name: "account_groups")
}

model Account {
  id            String      @id @default(cuid())
  name          String // e.g., 'Chase Checking', 'Wallet Cash'
  type          AccountType @default(ASSET)
  balance       Decimal     @default("0.00") @db.Decimal(18, 2)
  currency      String? // eg. Dollars, Euros, Shillings
  currency_code String? // eg. USD, EUR, KES
  description   String?

  profile    Profile      @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  profile_id String
  group      AccountGroup @relation(fields: [group_id], references: [id], onDelete: Cascade)
  group_id   String

  transactions Transaction[]

  status      Status     @default(ACTIVE)
  sync_status SyncStatus @default(SYNCED)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@unique([profile_id, name, group_id])
  @@map(name: "accounts")
}

model Transaction {
  id          String          @id @default(cuid())
  type        TransactionType @default(DEBIT)
  date        DateTime        @default(now())
  amount      Decimal         @default("0.00") @db.Decimal(8, 2)
  fees        Decimal         @default("0.00") @db.Decimal(8, 2)
  description String?

  profile           Profile        @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  profile_id        String
  account           Account        @relation(fields: [account_id], references: [id], onDelete: Cascade)
  account_id        String
  category          Category       @relation(fields: [category_id], references: [id], onDelete: Cascade)
  category_id       String
  recurring_rule    RecurringRule? @relation(fields: [recurring_rule_id], references: [id], onDelete: Cascade)
  recurring_rule_id String?

  status      Status     @default(ACTIVE)
  sync_status SyncStatus @default(SYNCED)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map(name: "transactions")
}

model RecurringRule {
  id        String              @id @default(cuid())
  frequency RecurringFrequency?
  weekdays  String? // 0 - monday, 6 - sunday. comma separated for multiples. eg. 0,4,6
  months    String? // 0 - january, 12 - december. comma separated for multiples. eg. 5,7,11
  interval  Int                 @default(1)
  end       DateTime?

  transactions Transaction[]

  status      Status     @default(ACTIVE)
  sync_status SyncStatus @default(SYNCED)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map(name: "recurring_rules")
}

model Budget {
  id    String   @id @default(cuid())
  limit Decimal  @default("0.00") @db.Decimal(8, 2)
  start DateTime // Start of the budget period (e.g., 2025-11-01)
  end   DateTime // End of the budget period (e.g., 2025-11-30)

  profile     Profile  @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  profile_id  String
  category    Category @relation(fields: [category_id], references: [id], onDelete: Cascade)
  category_id String

  status      Status     @default(ACTIVE)
  sync_status SyncStatus @default(SYNCED)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map(name: "budgets")
}

model Food {
  id          String         @id @default(cuid())
  name        String // eg. brand name
  description String? // eg. food type (whole brown bread)
  per         Int // eg. (100)
  per_unit    WeightUnitType // eg. (grams)
  carbs       Int
  protein     Int
  fat         Int
  kcal        Int

  profile    Profile @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  profile_id String

  servings Serving[]

  status      Status     @default(ACTIVE)
  sync_status SyncStatus @default(SYNCED)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map(name: "foods")
}

model Meal {
  id          String  @id @default(cuid())
  name        String
  description String?

  profile    Profile @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  profile_id String

  servings Serving[]

  status      Status     @default(ACTIVE)
  sync_status SyncStatus @default(SYNCED)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map(name: "meals")
}

model Serving {
  id           String         @id @default(cuid())
  serving_size Int // eg. (100)
  serving_unit WeightUnitType // eg. (grams)

  profile    Profile @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  profile_id String
  food       Food    @relation(fields: [food_id], references: [id], onDelete: Cascade)
  food_id    String
  meal       Meal?   @relation(fields: [meal_id], references: [id], onDelete: Cascade)
  meal_id    String?
  eat        Eat?    @relation(fields: [eat_id], references: [id], onDelete: Cascade)
  eat_id     String?

  status      Status     @default(ACTIVE)
  sync_status SyncStatus @default(SYNCED)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map(name: "servings")
}

model Eat {
  id   String  @id @default(cuid())
  time EatTime

  profile    Profile @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  profile_id String

  servings Serving[]

  status      Status     @default(ACTIVE)
  sync_status SyncStatus @default(SYNCED)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map(name: "eats")
}

model Mass {
  id           String @id @default(cuid())
  weight       Int
  fat          Int
  visceral_fat Int
  lean_weight  Int
  muscle       Int
  bone         Int
  water        Int
  bmi          Int
  bmr          Int

  profile    Profile @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  profile_id String

  status      Status     @default(ACTIVE)
  sync_status SyncStatus @default(SYNCED)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map(name: "masses")
}

model Notebook {
  id    String @id @default(uuid())
  title String

  profile    Profile @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  profile_id String

  notes Note[]

  status      Status     @default(ACTIVE)
  sync_status SyncStatus @default(SYNCED)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map(name: "notebooks")
}

model Note {
  id      String  @id @default(uuid())
  title   String
  content String?

  profile     Profile   @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  profile_id  String
  notebook    Notebook? @relation(fields: [notebook_id], references: [id], onDelete: SetNull)
  notebook_id String?

  links_from Link[] @relation("FromLinks") // outgoing links
  links_to   Link[] @relation("ToLinks") // incoming links (backlinks)

  status      Status     @default(ACTIVE)
  sync_status SyncStatus @default(SYNCED)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map(name: "notes")
}

model Link {
  id String @id @default(uuid())

  profile    Profile @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  profile_id String
  from       Note    @relation("FromLinks", fields: [from_id], references: [id])
  from_id    String
  to         Note    @relation("ToLinks", fields: [to_id], references: [id])
  to_id      String

  status      Status     @default(ACTIVE)
  sync_status SyncStatus @default(SYNCED)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@unique([from_id, to_id]) // avoid duplicate links
  @@map(name: "links")
}
